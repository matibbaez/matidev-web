---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meet the skilled and experienced team behind our successful digital marketing strategies";

import {
  default as p1,
  default as p2,
  default as p3,
  default as p4,
  default as p5,
  default as p6,
} from "../../assets/pics/profile1.svg";

const team = [
  {
    pic: p1,
    name: "Mat√≠as Baez",
    role: "CEO",
    description:
      "3+ years of experience in front-end develop. Skilled in create and management.",
    link: "https://www.linkedin.com/in/matibbaez/",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-1 xl:grid-cols-3 grid-rows-1 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-start mt-10">
      <button class="btn-primary">See all team</button>
    </div>
  </div>
</Section>
