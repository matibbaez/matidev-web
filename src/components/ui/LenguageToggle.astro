---
import usaFlag from '../../assets/pics/usa.svg';
import argentinaFlag from '../../assets/pics/argentina.svg';
---

<button id="languageToggle" class="language-toggle">
  <img src={usaFlag.src} alt="USA Flag" width="30" height="20" />
</button>

<style>
  .language-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    padding: 5px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const languageToggle = document.getElementById("languageToggle");
    if (!languageToggle) return; // Verificación para asegurar que el elemento existe

    let isEnglish = true; // Estado inicial del idioma

    languageToggle.addEventListener("click", () => {
      // Cambia el estado del idioma
      isEnglish = !isEnglish;

      // Actualiza la imagen de la bandera
      const flagImage = languageToggle.querySelector("img");
      if (flagImage) {
        flagImage.src = isEnglish ? "../../assets/pics/usa.svg" : "../../assets/pics/argentina.svg";
        flagImage.alt = isEnglish ? "USA Flag" : "Argentina Flag";
      }

      // Aquí puedes añadir la lógica para cambiar el idioma del contenido de la página
      console.log(isEnglish ? "English" : "Español");
    });
  });
</script>

